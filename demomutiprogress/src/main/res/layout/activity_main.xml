<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <originfx.originecn.cn.demomutiprogress.MutiProgress
        android:id="@+id/mp_1"
        app:currNodeNO="2"
        app:currNodeState="1"
        app:nodeRadius="10dp"
        app:nodesNum="4"
        app:processingLineColor="#7B68EE"
        app:progresFailDrawable="@drawable/ic_error"
        app:progresSuccDrawable="@drawable/ic_checked"
        app:progressingDrawable="@drawable/ic_completed"
        app:unprogressingDrawable="@drawable/ic_round_ddd"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <originfx.originecn.cn.demomutiprogress.MutiProgress
        android:id="@+id/mp_2"
        app:currNodeNO="6"
        app:currNodeState="1"
        app:nodeRadius="6dp"
        app:nodesNum="10"
        app:processingLineColor="#7B68EE"
        app:progresFailDrawable="@drawable/ic_error"
        app:progresSuccDrawable="@drawable/ic_checked"
        app:progressingDrawable="@drawable/ic_completed"
        app:unprogressingDrawable="@drawable/ic_round_ddd"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/mp_1"
        android:layout_marginTop="20dp" />

    <originfx.originecn.cn.demomutiprogress.MutiProgress
        android:id="@+id/mp_3"
        app:currNodeNO="10"
        app:currNodeState="0"
        app:nodeRadius="4dp"
        app:nodesNum="15"
        app:processingLineColor="#FF00FF"
        app:progresFailDrawable="@drawable/ic_error"
        app:progresSuccDrawable="@drawable/ic_checked"
        app:progressingDrawable="@drawable/ic_completed"
        app:unprogressingDrawable="@drawable/ic_round_ddd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/mp_2"
        android:layout_marginTop="20dp" />

</RelativeLayout>
